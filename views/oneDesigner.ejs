<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Perfil</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('navbar') %>
    <br />

    <div class="container blanco usuario">
      <img
        src="/images/designers/<%= resultDesigner[0].img %>"
        class="card-img-top bordes"
        style="width: 45%"
        alt="..."
      />
      <div class="card-body arreglo1">
        <h2 class="card-title">
          <%= resultDesigner[0].name + " " + resultDesigner[0].last_name %>
        </h2>
        <p class="card-text"><%= resultDesigner[0].email %></p>
        <p class="card-text"><%= resultDesigner[0].phone_number %></p>
        <p class="card-text"><%= resultDesigner[0].description %></p>
        <a
          href="/garment/viewGarment/<%= resultDesigner[0].designer_id %>"
          class="btn boton1"
          >Añadir modelo, a la colección</a
        >
        <br />
        <br />
        <a
          href="/designer/deleteDesigner/<%= resultDesigner[0].designer_id %>"
          class="btn boton5"
          >Eliminar diseñador</a
        >
        <br />
      </div>
    </div>

    <div class="row blanco arreglo3">
      <% resultGarment.forEach(garment => { %>
      <div class="col-xs-12 col-md-6 col-lg-4 mb-5 arreglo">
        <div class="image">
          <img
            class="w-85"
            src="/images/garments/<%= garment.img %>"
            class="card-img-top"
            alt="..."
          />
        </div>

        <div class="card-body htc">
          <h3 class="card-title"><%= garment.name %></h3>
          <p class="card-text"><%= garment.descrition %></p>
          <p class="card-text"><%= garment.size %></p>
          <a
            href="/garment/editGarment/<%= garment.garment_id %>"
            class="btn boton3"
            >Editar prenda</a
          >
          <br />
          <a
            href="/garment/deleteGarment/<%= garment.garment_id %>/<%= garment.designer_id %> "
            class="btn boton4"
            >Eliminar prenda</a
          >
        </div>
      </div>

      <% }) %>
    </div>

    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <footer class="bg-dark text-center text-white">
            <div class="container p-4 pb-0">
              <section class="foot mb-4">
                <a class="btn-floating m-1" href="#" role="button"
                  ><img
                    src="/images/iconos/facebook.png"
                    style="width: 5vh"
                    alt="" /><i class="fab fa-facebook-f"></i
                ></a>

                <!-- Twitter -->
                <a class="btn-floating m-1" href="#!" role="button"
                  ><img
                    src="/images/iconos/gorjeo.png"
                    style="width: 5vh"
                    alt="" /><i class="fab fa-twitter"></i
                ></a>

                <!-- Google -->
                <a class="btn-floating m-1" href="#!" role="button">
                  <img
                    src="/images/iconos/instagram.png"
                    style="width: 5vh"
                    alt="" />
                  <i class="fab fa-google"></i
                ></a>

                <!-- Instagram -->
                <a class="btn-floating m-1" href="#!" role="button">
                  <img
                    src="/images/iconos/whatsapp.png"
                    style="width: 5vh"
                    alt="" />
                  <i class="fab fa-instagram"></i
                ></a>
              </section>
              <!-- Section: Social media -->
            </div>
            <!-- Grid container -->

            <div
              class="text-center p-3"
              style="background-color: rgba(0, 0, 0, 0.2)"
            >
              © 2022 Copyright:
              <a class="text-white" href="https://mdbootstrap.com/"
                >arrecifistyle.es</a
              >
            </div>
          </footer>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
