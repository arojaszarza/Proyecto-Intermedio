<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Añadir Prenda</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('navbar') %>

    <div class="container-fluid blanco">
      <br />
      <h2>Edita alguna prenda</h2>
      <br />
      <div class="row">
        <div class="col-xs-12 col-lg-5">
          <form
            action="/garment/editGarment/<%= result[0].garment_id %>/<%= result[0].designer_id %>"
            method="post"
            enctype="application/x-www-form-urlencoded"
          >
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label"
                >nombre</label
              >
              <input
                type="text"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="name@example.com"
                name="name"
                style="width: 70%"
                value="<%= result[0].name %>"
              />
            </div>
            <div class="mb-3">
              <textarea
                placeholder="<%= result[0].descrition %>"
                name="description"
                id="exampleFormControlInput2"
                cols="80%"
                rows="10%"
              ></textarea>
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput3" class="form-label"
                >Talla</label
              >
              <input
                type="texto"
                class="form-control"
                id="exampleFormControlInput3"
                placeholder="name@example.com"
                name="size"
                style="width: 70%"
                value="<%= result[0].size %>"
              />
            </div>
            <br />

            <button class="btn boton2" type="submit">Editar prenda</button>
          </form>
        </div>
        <div class="col-xs-12 col-lg-7 camijeta">
          <img
            src="/images/garments/<%= result[0].img %>"
            style="width: 55%"
            alt=""
          />
        </div>
      </div>
      <br />
      <div class="row">
        <div class="col-12">
          <footer class="bg-dark text-center text-white">
            <div class="container p-4 pb-0">
              <section class="foot mb-4">
                <a class="btn-floating m-1" href="#" role="button"
                  ><img
                    src="/images/iconos/facebook.png"
                    style="width: 5vh"
                    alt="" /><i class="fab fa-facebook-f"></i
                ></a>

                <!-- Twitter -->
                <a class="btn-floating m-1" href="#!" role="button"
                  ><img
                    src="/images/iconos/gorjeo.png"
                    style="width: 5vh"
                    alt="" /><i class="fab fa-twitter"></i
                ></a>

                <!-- Google -->
                <a class="btn-floating m-1" href="#!" role="button">
                  <img
                    src="/images/iconos/instagram.png"
                    style="width: 5vh"
                    alt="" />
                  <i class="fab fa-google"></i
                ></a>

                <!-- Instagram -->
                <a class="btn-floating m-1" href="#!" role="button">
                  <img
                    src="/images/iconos/whatsapp.png"
                    style="width: 5vh"
                    alt="" />
                  <i class="fab fa-instagram"></i
                ></a>
              </section>
              <!-- Section: Social media -->
            </div>
            <!-- Grid container -->

            <div
              class="text-center p-3"
              style="background-color: rgba(0, 0, 0, 0.2)"
            >
              © 2022 Copyright:
              <a class="text-white" href="https://mdbootstrap.com/"
                >arrecifistyle.es</a
              >
            </div>
          </footer>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
